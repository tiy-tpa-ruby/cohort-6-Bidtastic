.page-header
  = link_to new_item_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Item
  %h1 Listing items

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Event
        %th Description
        %th Min bid
        %th Bid increment
        %th Final bid
        %th Category
        %th User
        %th Photo
        %th{colspan: 3}
        %th Favorite

    %tbody.search-results
      = render @items
    -#
    -# %tbody
    -#   - @items.each do |item|
        %tr
          %td= item.event.location
          %td= item.description
          %td= item.min_bid
          %td= item.bid_increment
          %td= item.final_bid
          %td= item.category
          %td= item.user.name
          %td
            - if item.photo
              = image_tag attachment_url(item, :photo), size: "200x200"

            -# - item.pictures.each do |picture|
            -#   = image_tag attachment_url(picture, :image), size: "200x200"
          %td
            = link_to item do
              %span.glyphicon.glyphicon-ok
          %td
            = link_to edit_item_path(item) do
              %span.glyphicon.glyphicon-pencil
          %td
            = link_to item, data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-remove
