.page-header
  = link_to new_item_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Item
  %h1 Listing items

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Description
        %th Photo
        %th Min bid
        %th Bid increment
        %th Final bid
        %th Category
        %th User
        %th{colspan: 3}

    %tbody
      - @items.each do |item|
        %tr
          %td= item.name
          %td= item.description
          %td= item.photo_id
          %td= item.min_bid
          %td= item.bid_increment
          %td= item.final_bid
          %td= item.category
          %td= item.user
          %td
            - item.pictures.each do |picture|
              = image_tag attachment_url(picture, :image), size: "200x200"
          %td
            = link_to item do
              %span.glyphicon.glyphicon-ok
          %td
            = link_to edit_item_path(item) do
              %span.glyphicon.glyphicon-pencil
          %td
            = link_to item, data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-remove
